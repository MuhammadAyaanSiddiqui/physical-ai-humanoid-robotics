    <limit lower="-3.14" upper="3.14" effort="50.0" velocity="2.0"/>
  </joint>

  <!-- Right Elbow (Forearm) -->
  <link name="right_elbow_link">
    <visual>
      <origin xyz="0 0 -0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.3"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0 0 -0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.3"/>
